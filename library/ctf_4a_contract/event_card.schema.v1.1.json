{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "ctf/event_card.schema.v1.1",
  "title": "CTF Event Card",
  "type": "object",
  "required": ["schema_version", "event_id", "source", "timestamp", "summary", "evidence_event_ids"],
  "properties": {
    "schema_version": {"type": "string", "const": "1.1"},
    "event_id": {"type": "string"},
    "source": {
      "type": "object",
      "required": ["source_id"],
      "properties": {
        "source_id": {"type": "string"},
        "url": {"type": "string"},
        "platform": {"type": "string"}
      }
    },
    "timestamp": {"type": "string", "description": "ISO-8601"},
    "summary": {"type": "string"},

    "category": {
      "type": "string",
      "description": "wedding_gold | natural_diamond | lab_grown | competitor | other (可扩展)"
    },

    "claims": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["text", "confidence"],
        "properties": {
          "text": {"type": "string"},
          "confidence": {"type": "number", "minimum": 0, "maximum": 1},
          "counter_claim": {"type": "string", "description": "可选：反主张/对抗论点"}
        }
      }
    },

    "signals": {
      "type": "object",
      "properties": {
        "price": {"type": "object"},
        "sentiment": {"type": "object"},
        "volume": {"type": "object"}
      }
    },

    "evidence_event_ids": {
      "type": "array",
      "items": {"type": "string"},
      "description": "证据链：指向原始事件/记录的 ID 列表"
    },

    "source_event_ids": {
      "type": "array",
      "items": {"type": "string"},
      "description": "可选：用于聚合/归并时追溯来源事件"
    }
  }
}
